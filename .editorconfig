# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
# Unix-style newlines with a newline ending every file
indent_style = space
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

# Xml config files
[*.{props,targets,ruleset,config}]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# JSON files
[*.{json,yaml,yml,toml}]
indent_size = 2

# Settings for Java and Kotlin files
[*.{java,kt,kts}]
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
